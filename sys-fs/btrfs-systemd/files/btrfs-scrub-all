#!/bin/bash

declare -A devices

while read -r device mountpoint type junk; do
	case "$type" in
		btrfs)
			devices[$device]=$device
			;;
	esac
done < /proc/mounts

status=0
for device in ${devices[@]}; do
	echo Scrubbing $device ...
	btrfs scrub start -Bd $device
	err=$?
	if [ $err -ne 0 ]; then
		status=$err
	fi
done
exit $status




